<li class="recipe">
  <div class="recipe-border">
    <div class="row">
      <div class="span5">
        <span class="thumbnail-well">
          <img class="thumbnail" src="/cookbook/images/<%= recipe.slug %>.png" width="262" height="175" alt="<%= recipe.title %>">
        </span>
      </div>
      <div class="span8">
        <a href="/cookbook/recipes/<%= recipe.slug %>" class="short-description">
          <h2><%= recipe.title %></h2>
          <span class="date"><%= recipe.date %></span>
          <p><%= recipe.description %></p>
          <p>
            <% recipe.categories.each do |category| %>
              <span class="left ingredient"><%= category.title %></span>
            <% end %>
            <em class="left pull-right">Read more &raquo;</em>
          </p>
        </a>
      </div>
    </div>
  </div>
</li>
